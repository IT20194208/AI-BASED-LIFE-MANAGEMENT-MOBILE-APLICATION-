<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4ECFB"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/cardview">

        <com.denzcoskun.imageslider.ImageSlider
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/imageslider"
            app:iss_period="1000"
            app:iss_auto_cycle="true"
            app:iss_delay="1000"
            app:iss_corner_radius="20"
            app:iss_title_background="@drawable/default_gradient"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="280dp"
        android:layout_height="101dp"
        android:layout_below="@+id/cardview"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="sans-serif"
        android:text="Life Management"
        android:textColor="#29235C"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="73dp"
        android:fontFamily="sans-serif"
        android:text="Manage life easily with creativity as your guiding star"
        android:textColor="#29235C"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/shining_button_background"
        android:elevation="8dp"
        android:padding="12dp"
        android:radius="20dp"
        android:text="Get Start"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />

</RelativeLayout>